<div class="form-container">
    <form id="update-game-form" method="POST" action="/games/update/{{game.gameID}}">
        <input type="hidden" name="gameID" value="{{game.gameID}}">

        <div class="form-group">
            <label for="gameTitle">Game Title: <span class="required">*</span></label>
            <input type="text" id="gameTitle" name="gameTitle" required maxlength="150" value="{{game.gameTitle}}">
        </div>

        <div class="form-group">
            <label for="jamID">Game Jam: <span class="required">*</span></label>
            <select id="jamID" name="jamID" required>
                {{#each jams}}
                <option value="{{this.jamID}}" {{#if (eq this.jamID ../game.jamID)}}selected{{/if}}>{{this.jamName}}</option>
                {{/each}}
            </select>
        </div>

        <div class="form-group">
            <label for="engine">Game Engine:</label>
            <input type="text" id="engine" name="engine" maxlength="80" value="{{game.engine}}">
        </div>

        <div class="form-group">
            <label for="genre">Genre:</label>
            <input type="text" id="genre" name="genre" maxlength="80" value="{{game.genre}}">
        </div>

        <div class="form-group">
            <label for="submissionURL">Submission URL:</label>
            <input type="url" id="submissionURL" name="submissionURL" maxlength="255" value="{{game.submissionURL}}">
        </div>

        <div class="form-group">
            <label for="status">Status:</label>
            <select id="status" name="status">
                <option value="Submitted" {{#if (eq game.status "Submitted")}}selected{{/if}}>Submitted</option>
                <option value="Approved" {{#if (eq game.status "Approved")}}selected{{/if}}>Approved</option>
                <option value="Rejected" {{#if (eq game.status "Rejected")}}selected{{/if}}>Rejected</option>
            </select>
        </div>

        <div class="form-group">
            <label for="score">Score (0-10):</label>
            <input type="number" id="score" name="score" min="0" max="10" step="0.1" value="{{game.score}}">
        </div>

        <div class="form-actions">
            <button type="submit" class="btn btn-primary">Update Game</button>
            <a href="/games" class="btn btn-secondary">Cancel</a>
        </div>
    </form>
</div>

<script>
document.getElementById('update-game-form').addEventListener('submit', function(e) {
    e.preventDefault();
    alert('Form submission will be implemented in Step 4');
});
</script>
