<div class="form-container">
    <form id="add-jam-form" method="POST" action="/jams/add">
        <div class="form-group">
            <label for="jamName">Jam Name: <span class="required">*</span></label>
            <input type="text" id="jamName" name="jamName" required maxlength="150">
        </div>

        <div class="form-group">
            <label for="startDate">Start Date: <span class="required">*</span></label>
            <input type="date" id="startDate" name="startDate" required>
        </div>

        <div class="form-group">
            <label for="endDate">End Date: <span class="required">*</span></label>
            <input type="date" id="endDate" name="endDate" required>
        </div>

        <div class="form-group">
            <label for="location">Location:</label>
            <input type="text" id="location" name="location" maxlength="120" placeholder="e.g., Corvallis, OR or Online">
        </div>

        <div class="form-group">
            <label for="maxTeamSize">Max Team Size: <span class="required">*</span></label>
            <input type="number" id="maxTeamSize" name="maxTeamSize" required min="1" max="20" value="5">
        </div>

        <div class="form-actions">
            <button type="submit" class="btn btn-primary">Add Game Jam</button>
            <a href="/jams" class="btn btn-secondary">Cancel</a>
        </div>
    </form>
</div>

