<div class="page-header">
    <a href="/game-tools/add" class="btn btn-primary">Add New Game Tool</a>
</div>

<div class="table-container">
    <table>
        <thead>
            <tr>
                <th>ID</th>
                <th>Game Title</th>
                <th>Tool Name</th>
                <th>Notes</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            {{#each data}}
            <tr>
                <td>{{this.gameToolID}}</td>
                <td>{{this.gameTitle}}</td>
                <td>{{this.toolName}}</td>
                <td>{{this.notes}}</td>
                <td class="action-buttons">
                    <a href="/game-tools/update/{{this.gameToolID}}" class="btn btn-small btn-edit">Update</a>
                    <button class="btn btn-small btn-delete" onclick="deleteGameTool({{this.gameToolID}})">Delete</button>
                </td>
            </tr>
            {{else}}
            <tr>
                <td colspan="5" class="no-data">No game tools found. <a href="/game-tools/add">Add one now</a>.</td>
            </tr>
            {{/each}}
        </tbody>
    </table>
</div>

