<div class="form-container">
    <form id="add-tool-form" method="POST" action="/tools/add">
        <div class="form-group">
            <label for="toolName">Tool Name: <span class="required">*</span></label>
            <input type="text" id="toolName" name="toolName" required maxlength="120">
        </div>

        <div class="form-group">
            <label for="toolType">Tool Type:</label>
            <input type="text" id="toolType" name="toolType" maxlength="80" placeholder="e.g., Game Engine, 3D Modeling, Audio">
        </div>

        <div class="form-group">
            <label for="sourceURL">Source URL:</label>
            <input type="url" id="sourceURL" name="sourceURL" maxlength="255" placeholder="https://example.com">
        </div>

        <div class="form-actions">
            <button type="submit" class="btn btn-primary">Add Tool</button>
            <a href="/tools" class="btn btn-secondary">Cancel</a>
        </div>
    </form>
</div>

<script>
document.getElementById('add-tool-form').addEventListener('submit', function(e) {
    e.preventDefault();
    alert('Form submission will be implemented in Step 4');
});
</script>
