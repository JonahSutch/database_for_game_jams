<div class="form-container">
    <form id="update-jam-form" method="POST" action="/jams/update/{{jam.jamID}}">
        <input type="hidden" name="jamID" value="{{jam.jamID}}">

        <div class="form-group">
            <label for="jamName">Jam Name: <span class="required">*</span></label>
            <input type="text" id="jamName" name="jamName" required maxlength="150" value="{{jam.jamName}}">
        </div>

        <div class="form-group">
            <label for="startDate">Start Date: <span class="required">*</span></label>
            <input type="date" id="startDate" name="startDate" required value="{{jam.startDate}}">
        </div>

        <div class="form-group">
            <label for="endDate">End Date: <span class="required">*</span></label>
            <input type="date" id="endDate" name="endDate" required value="{{jam.endDate}}">
        </div>

        <div class="form-group">
            <label for="location">Location:</label>
            <input type="text" id="location" name="location" maxlength="120" value="{{jam.location}}">
        </div>

        <div class="form-group">
            <label for="maxTeamSize">Max Team Size: <span class="required">*</span></label>
            <input type="number" id="maxTeamSize" name="maxTeamSize" required min="1" max="20" value="{{jam.maxTeamSize}}">
        </div>

        <div class="form-actions">
            <button type="submit" class="btn btn-primary">Update Game Jam</button>
            <a href="/jams" class="btn btn-secondary">Cancel</a>
        </div>
    </form>
</div>

