<div class="form-container">
    <form id="add-team-form" method="POST" action="/teams/add">
        <div class="form-group">
            <label for="teamName">Team Name: <span class="required">*</span></label>
            <input type="text" id="teamName" name="teamName" required maxlength="120">
        </div>

        <div class="form-group">
            <label for="jamID">Game Jam: <span class="required">*</span></label>
            <select id="jamID" name="jamID" required>
                <option value="">-- Select a Game Jam --</option>
                {{#each jams}}
                <option value="{{this.jamID}}">{{this.jamName}}</option>
                {{/each}}
            </select>
        </div>

        <div class="form-actions">
            <button type="submit" class="btn btn-primary">Add Team</button>
            <a href="/teams" class="btn btn-secondary">Cancel</a>
        </div>
    </form>
</div>

<script>
document.getElementById('add-team-form').addEventListener('submit', function(e) {
    e.preventDefault();
    alert('Form submission will be implemented in Step 4');
});
</script>
