<div class="page-header">
    <a href="/tools/add" class="btn btn-primary">Add New Tool</a>
</div>

<div class="table-container">
    <table>
        <thead>
            <tr>
                <th>Tool ID</th>
                <th>Tool Name</th>
                <th>Tool Type</th>
                <th>Source URL</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            {{#each data}}
            <tr>
                <td>{{this.toolID}}</td>
                <td>{{this.toolName}}</td>
                <td>{{this.toolType}}</td>
                <td>
                    {{#if this.sourceURL}}
                    <a href="{{this.sourceURL}}" target="_blank">Visit</a>
                    {{else}}
                    N/A
                    {{/if}}
                </td>
                <td class="action-buttons">
                    <a href="/tools/update/{{this.toolID}}" class="btn btn-small btn-edit">Update</a>
                    <button class="btn btn-small btn-delete" onclick="deleteTool({{this.toolID}})">Delete</button>
                </td>
            </tr>
            {{else}}
            <tr>
                <td colspan="5" class="no-data">No tools found. <a href="/tools/add">Add one now</a>.</td>
            </tr>
            {{/each}}
        </tbody>
    </table>
</div>

