<div class="page-header">
    <a href="/games/add" class="btn btn-primary">Add New Game</a>
</div>

<div class="table-container">
    <table>
        <thead>
            <tr>
                <th>Game ID</th>
                <th>Game Title</th>
                <th>Game Jam</th>
                <th>Engine</th>
                <th>Genre</th>
                <th>Submission URL</th>
                <th>Status</th>
                <th>Score</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            {{#each data}}
            <tr>
                <td>{{this.gameID}}</td>
                <td>{{this.gameTitle}}</td>
                <td>{{this.jamName}}</td>
                <td>{{this.engine}}</td>
                <td>{{this.genre}}</td>
                <td>
                    {{#if this.submissionURL}}
                    <a href="{{this.submissionURL}}" target="_blank">View</a>
                    {{else}}
                    N/A
                    {{/if}}
                </td>
                <td>{{this.status}}</td>
                <td>{{this.score}}</td>
                <td class="action-buttons">
                    <a href="/games/update/{{this.gameID}}" class="btn btn-small btn-edit">Update</a>
                    <button class="btn btn-small btn-delete" onclick="deleteGame({{this.gameID}})">Delete</button>
                </td>
            </tr>
            {{else}}
            <tr>
                <td colspan="9" class="no-data">No games found. <a href="/games/add">Add one now</a>.</td>
            </tr>
            {{/each}}
        </tbody>
    </table>
</div>

