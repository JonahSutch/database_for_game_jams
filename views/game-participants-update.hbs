<div class="form-container">
    <form id="update-game-participant-form" method="POST" action="/game-participants/update/{{gameParticipant.gameParticipantID}}">
        <input type="hidden" name="gameParticipantID" value="{{gameParticipant.gameParticipantID}}">

        <div class="form-group">
            <label for="gameID">Game: <span class="required">*</span></label>
            <select id="gameID" name="gameID" required>
                {{#each games}}
                <option value="{{this.gameID}}" {{#if (eq this.gameID ../gameParticipant.gameID)}}selected{{/if}}>{{this.gameTitle}}</option>
                {{/each}}
            </select>
        </div>

        <div class="form-group">
            <label for="participantID">Participant: <span class="required">*</span></label>
            <select id="participantID" name="participantID" required>
                {{#each participants}}
                <option value="{{this.participantID}}" {{#if (eq this.participantID ../gameParticipant.participantID)}}selected{{/if}}>{{this.firstName}} {{this.lastName}}</option>
                {{/each}}
            </select>
        </div>

        <div class="form-group">
            <label for="role">Role: <span class="required">*</span></label>
            <input type="text" id="role" name="role" required maxlength="80" value="{{gameParticipant.role}}">
        </div>

        <div class="form-actions">
            <button type="submit" class="btn btn-primary">Update Game Participant</button>
            <a href="/game-participants" class="btn btn-secondary">Cancel</a>
        </div>
    </form>
</div>

<script>
document.getElementById('update-game-participant-form').addEventListener('submit', function(e) {
    e.preventDefault();
    alert('Form submission will be implemented in Step 4');
});
</script>
