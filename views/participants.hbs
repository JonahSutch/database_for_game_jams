<div class="page-header">
    <a href="/participants/add" class="btn btn-primary">Add New Participant</a>
</div>

<div class="table-container">
    <table>
        <thead>
            <tr>
                <th>ID</th>
                <th>First Name</th>
                <th>Last Name</th>
                <th>Email</th>
                <th>Handle</th>
                <th>Skills</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            {{#each data}}
            <tr>
                <td>{{this.participantID}}</td>
                <td>{{this.firstName}}</td>
                <td>{{this.lastName}}</td>
                <td>{{this.email}}</td>
                <td>{{this.handle}}</td>
                <td>{{this.skills}}</td>
                <td class="action-buttons">
                    <a href="/participants/update/{{this.participantID}}" class="btn btn-small btn-edit">Update</a>
                    <button class="btn btn-small btn-delete" onclick="deleteParticipant({{this.participantID}})">Delete</button>
                </td>
            </tr>
            {{else}}
            <tr>
                <td colspan="7" class="no-data">No participants found. <a href="/participants/add">Add one now</a>.</td>
            </tr>
            {{/each}}
        </tbody>
    </table>
</div>

