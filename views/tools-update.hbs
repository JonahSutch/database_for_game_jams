<div class="form-container">
    <form id="update-tool-form" method="POST" action="/tools/update/{{tool.toolID}}">
        <input type="hidden" name="toolID" value="{{tool.toolID}}">

        <div class="form-group">
            <label for="toolName">Tool Name: <span class="required">*</span></label>
            <input type="text" id="toolName" name="toolName" required maxlength="120" value="{{tool.toolName}}">
        </div>

        <div class="form-group">
            <label for="toolType">Tool Type:</label>
            <input type="text" id="toolType" name="toolType" maxlength="80" value="{{tool.toolType}}">
        </div>

        <div class="form-group">
            <label for="sourceURL">Source URL:</label>
            <input type="url" id="sourceURL" name="sourceURL" maxlength="255" value="{{tool.sourceURL}}">
        </div>

        <div class="form-actions">
            <button type="submit" class="btn btn-primary">Update Tool</button>
            <a href="/tools" class="btn btn-secondary">Cancel</a>
        </div>
    </form>
</div>

<script>
document.getElementById('update-tool-form').addEventListener('submit', function(e) {
    e.preventDefault();
    alert('Form submission will be implemented in Step 4');
});
</script>
