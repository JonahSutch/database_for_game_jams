<div class="form-container">
    <form id="update-participant-form" method="POST" action="/participants/update/{{participant.participantID}}">
        <input type="hidden" name="participantID" value="{{participant.participantID}}">

        <div class="form-group">
            <label for="firstName">First Name: <span class="required">*</span></label>
            <input type="text" id="firstName" name="firstName" required maxlength="80" value="{{participant.firstName}}">
        </div>

        <div class="form-group">
            <label for="lastName">Last Name: <span class="required">*</span></label>
            <input type="text" id="lastName" name="lastName" required maxlength="80" value="{{participant.lastName}}">
        </div>

        <div class="form-group">
            <label for="email">Email: <span class="required">*</span></label>
            <input type="email" id="email" name="email" required maxlength="255" value="{{participant.email}}">
        </div>

        <div class="form-group">
            <label for="handle">Handle/Username:</label>
            <input type="text" id="handle" name="handle" maxlength="60" value="{{participant.handle}}">
        </div>

        <div class="form-group">
            <label for="skills">Skills:</label>
            <input type="text" id="skills" name="skills" maxlength="250" value="{{participant.skills}}">
        </div>

        <div class="form-actions">
            <button type="submit" class="btn btn-primary">Update Participant</button>
            <a href="/participants" class="btn btn-secondary">Cancel</a>
        </div>
    </form>
</div>

<script>
document.getElementById('update-participant-form').addEventListener('submit', function(e) {
    e.preventDefault();
    alert('Form submission will be implemented in Step 4');
});
</script>
