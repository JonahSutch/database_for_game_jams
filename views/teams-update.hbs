<div class="form-container">
    <form id="update-team-form" method="POST" action="/teams/update/{{team.teamID}}">
        <input type="hidden" name="teamID" value="{{team.teamID}}">

        <div class="form-group">
            <label for="teamName">Team Name: <span class="required">*</span></label>
            <input type="text" id="teamName" name="teamName" required maxlength="120" value="{{team.teamName}}">
        </div>

        <div class="form-group">
            <label for="jamID">Game Jam: <span class="required">*</span></label>
            <select id="jamID" name="jamID" required>
                {{#each jams}}
                <option value="{{this.jamID}}" {{#if (eq this.jamID ../team.jamID)}}selected{{/if}}>{{this.jamName}}</option>
                {{/each}}
            </select>
        </div>

        <div class="form-actions">
            <button type="submit" class="btn btn-primary">Update Team</button>
            <a href="/teams" class="btn btn-secondary">Cancel</a>
        </div>
    </form>
</div>

<script>
document.getElementById('update-team-form').addEventListener('submit', function(e) {
    e.preventDefault();
    alert('Form submission will be implemented in Step 4');
});
</script>
